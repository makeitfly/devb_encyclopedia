<div class="quote-btn btn btn--invert">
  <svg width="20px" height="20px" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M5.29289 1.29291L6.70711 2.70712L3 6.41423V7.00001H7V14H1V5.5858L5.29289 1.29291Z" fill="#000000"/>
    <path d="M15 7.00001H11V6.41423L14.7071 2.70712L13.2929 1.29291L9 5.5858V14H15V7.00001Z" fill="#000000"/>
  </svg>
  <span>
      {{ 'Citeren'|t }}
  </span>
</div>

<div class="popup-quote">
  <div class="popup-quote__inner">
    <div class="popup-quote__content">
      <a class="popup-quote__close" href="#">Close popup</a>
      <div class="popup-quote__content-inner">
        <p class="quote-text">
          {% if authors %}
            {{ authors }}.
          {% endif %}
          {% if title %}
            {{ title }}.
          {% endif %}
          {% if description %}
            {{ 'In:'|t }} <i>{{ description }}</i>.
          {% endif %}
          {% if year %}
            {{ year }}.
          {% endif %}
          {% if link %}
            {{ link }}.
          {% endif %}
        </p>
        <svg class="copy-quote" width="20px" height="20px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M19.5 16.5L19.5 4.5L18.75 3.75H9L8.25 4.5L8.25 7.5L5.25 7.5L4.5 8.25V20.25L5.25 21H15L15.75 20.25V17.25H18.75L19.5 16.5ZM15.75 15.75L15.75 8.25L15 7.5L9.75 7.5V5.25L18 5.25V15.75H15.75ZM6 9L14.25 9L14.25 19.5L6 19.5L6 9Z" fill="#B7410E"/>
        </svg>
        <span class="copy-message">{{ 'Gekopieerd'|t }}</span>
      </div>
    </div>
  </div>
</div>
